<div class="container">
  <% if logged_in? %>

    <form method="GET" action="/users/<%= current_user.id %>">
      <input type="submit" value="<%= current_user.username %> Profile"/>
    </form>

    <form method="GET" action="/users">
      <input type="submit" value="Leaderboard"/>
    </form>

    <form method="POST" action="/">
      <input type="submit" value="Add to Favorites"/>
    </form>

  <% else %>

    <form method="GET" action="users/new">
      <input id="register-button" type="submit" value="Register"/>
    </form>

    <form method="GET" action="sessions/new">
      <input id="login-button" type="submit" value="Login"/>
    </form>

  <% end %>

  <div id="image-container">
    <%= erb :'_image_partial' %>
  </div>

  <form method="GET" action="/">
    <input id="scry-button" type="submit" value="Scry" />
  </form>

</div>
